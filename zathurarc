# hide statusbar by default
set guioptions "" 

# background color
set default-bg "#303030"

# set first page of document as the window icon
set window-icon-document "true"

set statusbar-basename "true"
set window-title-basename "true"
set window-title-page "true"

set zoom-center "true"

set first-page-column 1:1
set pages-per-row 2

map I feedkeys ":info<Return>"

set recolor-keephue true
#set recolor-darkcolor "#AAAAAA"

set selection-clipboard clipboard


#### key mappings ####
map = zoom in
map + zoom default 

map l navigate next
map h navigate previous

map <C-0> feedkeys ":blist 0<Return>"
map <C-1> feedkeys ":blist 1<Return>"
map <C-2> feedkeys ":blist 2<Return>"
map <C-3> feedkeys ":blist 3<Return>"
map <C-4> feedkeys ":blist 4<Return>"
map <C-5> feedkeys ":blist 5<Return>"

map <C-a> feedkeys ":exec okular %<Return>"

map @ feedkeys ":set first-page-column 1:2<Return>"
map \# feedkeys ":set first-page-column 1:1<Return>"

